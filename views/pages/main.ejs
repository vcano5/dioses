<!DOCTYPE html>
<html lang="es">
<head>
	<title><%=texto%> - Diccionario Dios</title>
	<%- include ('../partials/head.ejs') -%>


</head>
<%- include ('../partials/header.ejs') -%>
<body class="text-white">
	<br>

	<div class="wrapper">

		<div class="container">

			<p class="display-4" style="color: lightgray; text-align: center; font-size: 11vw">
				<%=texto%> <span class="lead"><%=tamano%></span></p>
				<span class="badge badge-dark badge-pill">				<%=subtitulo%>	
				</span>
				
	<%Dios.forEach(function(element){ %>
		<div class="media">
			<img src="<%=element.imagen%>" class="mr-3 align-self-center" alt="<%=element.espanol%>"  style="width: 20vh;">
			<div class="media-body">
				<h4 class="media-heading text-break mb-3"><a href="/clave?c=<%=element.clave%>"><% if(element.verificado == '1') {%>
  <i class="fas fa-check-square" style="color: peru;"> </i> 
<%} %> <%=element.espanol%><%=element.frase%></a></h4>
				<%if(element.historia.length > 150) { %>
					<p style="display: block;" width="100%" class="mb-sm-0 text-break"><%=element.historia.substring(0,150)%> ...</p>
				<%} else {%>
				<p style="display: block;" width="100%" class="mb-sm-0 text-break"><%=element.historia%></p>
				<% }%>
				<span class="text-break"> <%=element.Dios%> por <a href="/publicaciones?matricula=<%=element.matricula%>"><%= element.matricula%></a></span>
			</div>
		</div>
		<br>
	<% }) %>

	</div>
	</div>
	<nav aria-label="Page navigation example">
	  <ul class="pagination justify-content-center">
	  	<% if(pagina > 1) {%>
	    <li class="page-item mx-2"><a class="page-link" href="/<%=path%>?pagina=0">
	    	Inicio
	    </a></li>

	    <li class="page-item"><a class="page-link" href="/<%=path%>?pagina=<%=pagina-2%>"><%=pagina-1%></a>
        </li>

	    <% } else {%>
	    <li class="page-item mx-2 disabled"><a class="page-link" href="/<%=path%>?pagina=0">
	    	Inicio
	    </a></li>
	    <% } %>
	    <li class="page-item active"><a class="page-link" href="#"><%=pagina%></a></li>

	    <% if((pagina) !== paginas) {%>
	    
	    <li class="page-item" ><a class="page-link" href="/<%=path%>?pagina=<%=pagina%>"><%=pagina+1%></a></li>

        <li class="page-item mx-2"><a class="page-link" href="/<%=path%>?pagina=<%=paginas-1%>">
			    	Final
			    </a></li>
	    <% } else {%>
	    <li class="page-item mx-2 disabled"><a class="page-link" href="/<%=path%>?pagina=<%=paginas-1%>">
			    	Final
			    </a></li>
	    <% } %>
	  </ul>
	</nav>
</body>
</html>

