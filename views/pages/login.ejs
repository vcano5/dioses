<!DOCTYPE html>
<html lang="es">
<head>
  <%- include ('../partials/head') -%>
  <title>Login - Diccionario Nahuatl</title>
  <style type="text/css">
    
.login-form
{
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
}

  </style>
</head>
<body>
<header>
</header>
    <div class="container  jumbotron" style="background-color: transparent">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card px-3">
                    <div class="text-center">
                    <h1 class="display-4" style="color: gray">DIOSES</h1>
                    <img class="img-fluid" src="https://dioses.s3-us-west-2.amazonaws.com/zeus.svg" width="50%"> 
                    </div>
                    <hr style="border-color: lightgray;">
                    
                    <div class="card-body">

                        <form action="/login" method="POST">
                            <h2>Iniciar sesión</h2>
                            <%= mensaje%>

                            <div class="form-group row">
                                <label  for="matricula" class="col-md-4 col-form-label text-md-right">Matricula</label>
                                <div class="col-md-6">
                                    <input id="matricula" class="form-control" name="matricula" type="number" required>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="password" class="col-md-4 col-form-label text-md-right">Contraseña</label>
                                <div class="col-md-6">
                                    <input type="password" id="password" class="form-control" name="password" required>
                                </div>
                            </div>

                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    Entrar
                                </button>
                                <a href="/recoverpassword" class="btn btn-link">
                                    ¿Olvidaste tu contraseña?
                                </a>
                            </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br>
    </div>

<div class="fixed-bottom p-3 text-center" >
        <a class="btn btn-outline-success" href="/"><span class="fa fa-home"></span> PÁGINA PRINCIPAL</a>
    </div>

</body>
</html>

<script type="text/javascript">
    function comprobarRegex(){
        var x = document.getElementById('email_address').value
        var RExp = new RegExp('[a-zA-Z0-9_\.+]+@(uacj|alumnos\.uacj)(\.mx)');
        console.log(RExp.exec(x));
        if(!/[a-zA-Z0-9_\.+]+@(uacj|alumnos\.uacj)(\.mx)/.test(x)) {
            document.getElementById('alerta-email').style.display = "block"; 
            document.getElementById('email_address').classList.add('border' )
            document.getElementById('email_address').classList.add('border-danger')
            document.getElementById('email_address').focus()
        }
        else {
            document.getElementById('alerta-email').style.display = "none"; 
            document.getElementById('email_address').classList.remove('border-danger')
            document.getElementById('email_address').classList.add('border-success')
        }

    };
</script>
