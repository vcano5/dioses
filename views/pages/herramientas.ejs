<script type="text/javascript">
	if(!("<%=mensaje%>" == "")) {
		alert("<%=mensaje%>")
	}
	function comprobarImagen() {
		if(document.getElementById('esImagen').value == "") {
			alert('El campo esta vacio')
		}
		else {
			location.href = '/esImagen?url=' + document.getElementById('esImagen').value;
		}
	}

	function buscarPorMatricula() {
		if(document.getElementById('buscarMatricula').value == "") {

			alert('El campo esta vacio');
		}
		else {
			location.href = '/publicaciones?matricula=' + document.getElementById('buscarMatricula').value
		}
		
	}
</script>