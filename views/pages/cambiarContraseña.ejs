<!DOCTYPE html>
<html lang="es">
<head>
  <%- include ('../partials/head') -%>
  <style type="text/css">
    body {
        padding-top: 0.1rem;
        padding-bottom: 0.5rem;
    }
.login-form
{
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
}

  </style>
</head>
<body style="background-color: #343a40">
    

   

    <div class="container text-dark jumbotron" style="background-color: transparent;">

        <div class="row justify-content-center">

            <div class="col-md-8">
                <div class="card px-3">
                    <div class="text-center">
                    <h1 class="display-4" style="color: gray">DICCIONARIO NAHUATL</h1>
                    <img class="img-fluid" src="https://image.flaticon.com/icons/svg/207/207127.svg" width="20%" alt="Icon made by smashicons from www.flaticon.com"> 
                    </div>
                    <hr style="border-color: lightgray;">
                    
                    <div class="card-body">
                        <form action="/cambiarPassword" method="POST" id="formulario">
                             <input type="text" name="fb_id" value="<%=fb_id%>" hidden>
                            <h2> Configurar contraseña</h2>
                            <div class="form-group row">
                                <label for="password" class="col-md-4 col-form-label text-md-right">Nueva contraseña  </label>
                                <div class="col-md-6">
                                    <input type="text" id="password" class="form-control" name="password" required autofocus>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="password" class="col-md-4 col-form-label text-md-right">Confirma tu contraseña</label>
                                <div class="col-md-6">
                                    <input type="password" id="cpassword" class="form-control" name="cpassword" required>
                                </div>
                            </div>
                    </div>
                    </form>

                     <button class="btn btn-primary m-2" onclick="verificarContraseñas()">
                                    Guardar cambios <i class="fa fa-lock" aria-hidden="true"> </i>
                     </button>

                </div>
            </div>
        </div>
    </div>
    <br>
    </div>



</body>
</html>

<script type="text/javascript">
    function verificarContraseñas() {
        if(document.getElementById('cpassword').value == document.getElementById('password').value) {
            if(!(document.getElementById('cpassword').value == "" || document.getElementById('password').value == "")) {
                document.getElementById('formulario').submit();

            }
            else {
                 alert('Algun campo esta vacio')
            }
        }
        else {
            alert('Las contraseñas no coinciden')
        }
    }
</script>