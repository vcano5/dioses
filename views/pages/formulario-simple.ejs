<!DOCTYPE html>
<html lang="es">
<head>
    <%- include ('../partials/head') -%>
</head>

<header>
    <%- include ('../partials/header') -%>
</header>
<body>

  <div class="container">
    <br><br>
<form id="form1" name="form1" method="get" action="/postNahuatl">
  <table width="95%" border="0">
    <tr>
      <td>Autor</td>
      <td>
        <input type="text" name="autor" id="autor" value="<%=autor%>" disabled>
        <% if(autor == "Anónimo") {%>
        <span class="fa fa-question-circle" data-toggle="tooltip" data-placement="bottom" title="Registrate para agregar tu nombre y modificarlo posteriormente."></span> 
        <% }%>
      </td>
    </tr>
    <tr>
      <td>Matricula: </td>
      <td>
        <input type="number" name="matricula">
        </td>
    </tr>
      <tr>
      <td>&nbsp;</td>
      <td colspan="2">&nbsp;</td>
    </tr>
    <tr>
      <td>¿Es una expresion/frase?</td>
      <td>
        <input type="checkbox" name="esfrase" id="esfrase" onclick="comprobarCheckbox()"> 
      </td>
    </tr>
    </tr>
      <tr>
      <td>&nbsp;</td>
      <td colspan="2">&nbsp;</td>
    </tr>
    <tr id="frasetr" style="display:none;">
      <td>Frase <span class="requerido"></td>
      <td>
        <input type="text" name="frase" id="frase" placeholder=""> 
      </td>
    </tr>
    <tr id="palabratr">
      <td>Palabra en Español <span class="requerido"></span></td>
      <td colspan="2"><input type="text" name="espanol" id="espanol"  /></td>
    </tr>
    <tr>
      <td>Palabra en Nahuatl <span class="requerido"></span></td>
      <td colspan="2"><input type="text" name="nahuatl" id="nahuatl" required/></td>
    </tr>
    </tr>
      <tr>
      <td>&nbsp;</td>
      <td colspan="2">&nbsp;</td>
    </tr>

    <tr>
      <td colspan="2"><div align="center">
        <button type="reset" class="btn btn-danger">
          <i class="fa fa-eraser"></i> Restablecer
        </button>
        <!--<input class="btn btn-danger" type="reset" name="button" id="button" value="Restablecer" /> -->
        


        <!--<button type="submit" class="btn btn-primary">
          <i class="fa fa-paper-plane"></i> Enviar
        </button>
        --->

        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
          Enviar
        </button>

        <!--<i class="fa fa-paper-plane" aria-hidden="true"></i><input class="btn btn-primary" type="submit" name="button2" id="button2" value="Enviar">   -->
      </div></td>
    </tr>
  </table>
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Continuar?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body"> ¿Desea continuar?</span>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary">
          <i class="fa fa-paper-plane"></i> Enviar
        </button>
      </div>
    </div>
  </div>
</div>
</form>
</div>
<script>
   $(function(){
            $('[data-toggle="tooltip"]').tooltip();
   })

   var status = 0;

   function comprobarCheckbox() {
    if(status == 0) {
      document.getElementById('palabratr').style.display = "none";
      document.getElementById('frasetr').style.display = "";
      status = 1;
    }
    else {
      document.getElementById('frasetr').style.display = "none";
      document.getElementById('palabratr').style.display = "";
      status = 0;
    }
    
   }
</script>



</body>
</html>


<style type="text/css">
  .requerido:after {
    color: red;
    content: "(*)";
  }
</style>